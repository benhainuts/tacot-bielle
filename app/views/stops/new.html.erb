


<div class="form-newstop">
 <div class="d-flex justify-content-between align-items-center">



     <%# div class="horizontal-new-stop-container position-sticky top-0 bg-primary rounded-3" %>

          <div class="new-stop-arrow-btn">
             <%= link_to car_path@car do %>
             <%= image_tag "back_arrow.svg" %>
            <% end %>
          </div>

        <div class="pitstop">
          <h5><strong>Pitstop</strong></h5>
        </div>


        <%= simple_form_for [@car, @stop] do |f| %>
        <%= f.button :submit, "Enregistrer", class:"btn btn-alert custom-newstop-button", id:"ok-btn", value:"OK"  %>
 </div>



      <%= f.input :date, as: :string, input_html: { data: { controller: "datepicker"}, value: Date.today.strftime("%Y-%m-%d") }, label: "Date", placeholder: "Date"%>
      <%= f.input :cost, label: "Prix", placeholder: "Prix" %>
      <%= f.input :mileage, label: "Kilométrage", placeholder: "Kilométrage", input_html: {value: @car.mileage}  %>
      <%= f.input :notes, label: "Notes", placeholder: "Notes" %>
      <%if !params[:items].nil? %>
        <%= f.hidden_field :items, value: @items.split(" ")%>
      <%end%>


      <div class="ajouter-facture">
          <label for="facture-upload" class="custom-file-upload">
              <%= f.input :photos, as: :file, input_html: { multiple: true, id: "facture-upload", style: "display: none;" } %>
              <div class="ajouter-facture-content d-flex">
                    <div class="ajouter-facture-img">
                  <%= image_tag "price_list_white.svg" %>
                  </div>
                  <p id="p-ajout-facture">AJOUTER UNE FACTURE</p>
              </div>
          </label>
      </div>

      <% end %>


    </div>
  </div>
