<div class="dashboard">

  <div class="back-arrow-btn">
    <%= link_to dashboard_path do %>
      <%= image_tag "back_arrow_white.svg" %>
    <% end %>
  </div>

  <div class="add-btn">
    <%= link_to new_car_path, data: { turbo: false } do %>
      <%= image_tag "add_white.svg" %>
    <% end %>
  </div>

  <div class="d-flex align-items-center justify-content-between">
    <h2 >Mes v√©hicules</h2>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">
        <ul class="car-list-index d-flex flex-wrap justify-content-center">
          <% @cars.each do |car| %>
            <li class="car-card-index">
              <div class="car-image">
                <% if car.photo.attached? %>
                  <%= link_to car_path(car) do %>
                    <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill, alt: "Image de #{car.make} #{car.model}" %>
                  <% end %>
                <% else %>
                  <p>No Image Available</p>
                <% end %>
              </div>

              <div class="car-infos">
                <p id="make-model"><%= car.make %> <%= car.model %></p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="dashboard-navbar">
    <%= link_to root_path, class: 'navbar-item' do %>
      <%= image_tag "home.svg" %>
    <% end %>
    <div class="navbar-item"><%= image_tag "map.svg" %></div>
    <div class="navbar-item"><%= image_tag "calendar.svg" %></div>
    <div class="navbar-item"><%= image_tag "options.svg" %></div>
  </div>

</div>
