{
  "background_color": "yellow",
  "description": "Pour les propriétaires de voitures soucieux de l'entretien de leur véhicule. Tacot Bielle génère le plan d’entretien de votre voiture grâce à l’intelligence artificielle.",
  "display": "fullscreen",
  "name": "Tacot Bielle",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
